{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "baseUrl": "src",
    "rootDirs": [
        "src", "script"
    ],
    "outDir": "dist",
    "paths": {
        "@/*": [
            "*"
        ],
    },
    "esModuleInterop": true,
    "moduleDetection": "force",
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
      "src",
      "scripts"
  ],
  "exclude": []
}